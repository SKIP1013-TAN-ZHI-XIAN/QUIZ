package quiz2;

import java.util.Scanner;

class Question1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in); 
	    
		System.out.print("Total number of class held > ");
	    	int numClass= scan.nextInt();
	    
	    	System.out.print("Total number of class attended > ");
	    	int numAttend= scan.nextInt();
	    
	    	double percentage;
	    	percentage = (numAttend * (numClass*0.01));
	   
	    	System.out.print("Percentage attendance > " + percentage + "%");
	    
	    	if (percentage >= 75){
	        	System.out.print("\nStudent is allowed to sit for exam.");
	    	} else {
	       		System.out.print("\nStudent is not allowed to sit for exam.");
	    	}
	}

}
