package quiz2;

import java.util.Scanner;

class Question1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in); 
	    System.out.print("Total number of class held >");
	    int numClass= scan.nextInt();
	    System.out.print("Total number of class attended >");
	    int numAttend= scan.nextInt();
	    
	    double percentage;
	    percentage= ((numAttend/numClass)+(numAttend%numClass))*10;
	   
	    System.out.print("Percentage attendance >" + percentage +"%");
	    
	    if(percentage>=75){
	        System.out.print("Student is allowed to sit for exam.");
	    
	    }
	    else{
	        System.out.print("Student is not allowed to sit for exam.");
	    }
	}

}
